= form_for @user, url: password_reset_path(@user), html: {method: :put}, class: "login-form" do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= pluralize(@user.errors.count, "error") + "prohibited this user from being saved:"

      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  %p
    %h4= "For email: #{@user.email}"
    = f.password_field :password, placeholder: 'Password'
    %br
    = f.password_field :password_confirmation, placeholder: 'Password'
    = hidden_field_tag :token, @token
  %p
    = f.submit 'Reset Password', class: 'btn'
    %br
    %br
    = link_to "Back", root_path, class: 'btn'
