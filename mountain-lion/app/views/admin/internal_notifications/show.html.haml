- model_class = InternalNotification
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:message) + ':'
  %br
  = @internal_notification.message.html_safe
%p
  %strong= model_class.human_attribute_name(:displayed?) + ':'
  %br
  = @internal_notification.displayed?
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_internal_notifications_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_internal_notification_path(@internal_notification), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_internal_notification_path(@internal_notification), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
