- model_class = ProfileQuestion
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:question) + ':'
  %br
  = @profile_question.question
%p
  %strong= model_class.human_attribute_name(:reverse_question) + ':'
  %br
  = @profile_question.reverse_question
%p
  %strong= model_class.human_attribute_name(:profile_section_id) + ':'
  %br
  = @profile_question.profile_section
%p
  %strong= model_class.human_attribute_name(:answer_type) + ':'
  %br
  = @profile_question.answer_type
%p
  %strong Answers
  %ul
  - @profile_question.profile_answers.each do |answer|
    %li= answer

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_profile_questions_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_profile_question_path(@profile_question), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_profile_question_path(@profile_question), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
