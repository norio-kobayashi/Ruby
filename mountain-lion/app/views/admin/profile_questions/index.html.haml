- model_class = ProfileQuestion
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped.table-bordered
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:question)
      %th= model_class.human_attribute_name(:reverse_question)
      %th= model_class.human_attribute_name(:profile_section)
      %th= model_class.human_attribute_name(:answer_type)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @profile_questions.each do |profile_question|
      %tr
        %td= link_to profile_question.id, admin_profile_question_path(profile_question)
        %td= link_to profile_question.question, admin_profile_question_path(profile_question)
        %td= profile_question.reverse_question
        %td= profile_question.profile_section.name
        %td= profile_question.answer_type
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_profile_question_path(profile_question), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_profile_question_path(profile_question), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
= paginate @profile_questions
= link_to t('.new', :default => t("helpers.links.new")), new_admin_profile_question_path, :class => 'btn btn-primary'
