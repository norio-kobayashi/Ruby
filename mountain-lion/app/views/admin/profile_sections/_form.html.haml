= form_for [:admin, @profile_section], html: { class: 'form-horizontal' } do |f|
  .control-group
    = f.label :name, class: 'control-label'
    .controls
      = f.text_field :name, class: 'text_field'
  .control-group
    = f.label :reverse_name, class: 'control-label'
    .controls
      = f.text_field :reverse_name, class: 'text_field'
  .control-group
    = f.label :displayed, class: 'control-label'
    .controls
      = f.check_box :displayed
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_profile_section_path(@profile_section), class: 'btn'
