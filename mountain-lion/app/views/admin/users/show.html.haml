- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  = link_to "User Messages", admin_user_messages_path(@user), class: "btn btn-primary"
- if @user.subscription
  %p
    = link_to "Subscription Info", admin_user_subscription_path(@user, @user.subscription), class: "btn btn-primary"
%p
  %strong= model_class.human_attribute_name(:username) + ':'
  %br
  = @user.username
%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = @user.email
%p
  %strong= model_class.human_attribute_name(:firstname) + ':'
  %br
  = @user.firstname
%p
  %strong= model_class.human_attribute_name(:lastname) + ':'
  %br
  = @user.lastname
%p
  %strong= model_class.human_attribute_name(:date_of_birth) + ':'
  %br
  = @user.date_of_birth
%p
  %strong= model_class.human_attribute_name(:gender) + ':'
  %br
  = @user.gender
%p
  %strong= model_class.human_attribute_name(:country) + ':'
  %br
  = @user.country
%p
  %strong= model_class.human_attribute_name(:zip_code) + ':'
  %br
  = @user.zip_code
%p
  %strong= model_class.human_attribute_name(:activation_state) + ':'
  %br
  = @user.activation_state
%p
  %strong= model_class.human_attribute_name(:last_login_at) + ':'
  %br
  = @user.last_login_at
%p
  %strong= model_class.human_attribute_name(:last_logout_at) + ':'
  %br
  = @user.last_logout_at
%p
  %strong= model_class.human_attribute_name(:last_activity_at) + ':'
  %br
  = @user.last_activity_at
%p
  %strong= model_class.human_attribute_name(:last_login_from_ip_address) + ':'
  %br
  = @user.last_login_from_ip_address
%p
  %strong= model_class.human_attribute_name(:signup_ip_address) + ':'
  %br
  = @user.signup_ip_address
%p
  %strong= model_class.human_attribute_name(:city) + ':'
  %br
  = @user.city
%p
  %strong= model_class.human_attribute_name(:latitude) + ':'
  %br
  = @user.latitude
%p
  %strong= model_class.human_attribute_name(:longitude) + ':'
  %br
  = @user.longitude
%p
  %strong= model_class.human_attribute_name(:type) + ':'
  %br
  = @user.type

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), admin_user_path(@user), :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(@user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(@user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
