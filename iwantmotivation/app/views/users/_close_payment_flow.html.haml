= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.js'
- unless defined?(message)==nil
  :javascript
    top.alert("#{message}");

:javascript
  if(top._add_funds_callback!=undefined) top._add_funds_callback();
  var parent = window.top || window;
  if (parent.paypal_flows) {
    $.each(parent.paypal_flows, function (index, flow) {
      if (flow.isOpen()) {
        flow.closeFlow();
      }
    });
  }
  parent.location = "#{@success_uri}";


