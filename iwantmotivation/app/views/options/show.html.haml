.row.show-options-page
	.container
		- model_class = Option
		.page-header
			%h1=t '.title', :default => model_class.model_name.human.titleize

		%p
			%strong= model_class.human_attribute_name(:option_name) + ':'
			%br
			= @option.option_name
		%p
			%strong= model_class.human_attribute_name(:option_value) + ':'
			%br
			= @option.option_value

		.form-actions
			= link_to t('.back', :default => t("helpers.links.back")), options_path, :class => 'btn'
			= link_to t('.edit', :default => t("helpers.links.edit")), edit_option_path(@option), :class => 'btn'
			= link_to t('.destroy', :default => t("helpers.links.destroy")), option_path(@option), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
