<h1>Artist</h1>
<%= link_to 'Edit', :edit_artist %>
|
<%= link_to 'Delete', artist_path(@artist),
            :confirm => 'Are you sure?', :method => :delete %>
|
<%= link_to 'Add voiceover', new_artist_voiceover_path(@artist) %>
|
<%= link_to 'Back', :artists %>
<p>
  <b>Name:</b>
  <%= @artist.name %>
</p>
<p>
  <b>Gender:</b>
  <%= @artist.gender %>
</p>
<p>
  <b>Category:</b>
  <%= @artist.category %>
</p>

<!--
<p>
  <i> Note: Voiceovers are sortable. Just drag and drop into new position</i>
</p>
-->

<div class="container">
  <div class="voiceovers" id="sortable">
    <% @artist.voiceovers.each do |voiceover| %>
      <%= render voiceover %>
		<% end %>
	</div>
</div>
<p>
  <div class="queue">
    <!-- / This division is replaced with a flash button by Uploadify -->
    <div id="voiceover_upload">
    </div> 
  </div> 
</p>
<%= content_for :head do %>
<!-- / Only load uploadify javascript on pages they are needed -->
<%= javascript_include_tag '/uploadify/swfobject.js', '/uploadify/jquery.uploadify.v2.1.0.min.js' %>
<!-- / See application_helper.rb for this code -->
<%= photo_uploadify %>
<!-- / And more Javascript -->
<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js" %>
<!-- / application_helper -->
<%= photo_sortable %>
<% end %>