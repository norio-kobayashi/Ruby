<h1>Your lists</h1>

<table>
  <tr>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= link_to list.name, admin_list_path(list) %>&nbsp;&nbsp;&nbsp;</td>
    <td><%= link_to image_tag("icon_edit.gif"), edit_admin_list_path(list) %>&nbsp;</td>
    <td><%= link_to image_tag("icon_delete.gif"), admin_list_path(list), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

